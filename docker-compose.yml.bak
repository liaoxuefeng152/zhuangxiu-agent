services:
  # PostgreSQL数据库（生产环境）
  postgres:
    image: postgres:latest
    container_name: decoration-postgres-prod
    restart: unless-stopped
    environment:
      POSTGRES_DB: zhuangxiu_prod        # ← 统一数据库名
      POSTGRES_USER: decoration
      POSTGRES_PASSWORD_FILE: /run/secrets/postgres_password  # ← 从文件读密码
    # ports:
    #   - "5432:5432"  # 生产建议注释掉，仅内网访问
    volumes:
      - /data/postgres/prod:/var/lib/postgresql/data
      - ./database/init.sql:/docker-entrypoint-initdb.d/init.sql
    secrets:
      - postgres_password
    networks:
      - decoration-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U decoration"]
      interval: 10s
      timeout: 5s
      retries: 5

  # Redis缓存（带密码）
  redis:
    image: redis:latest
    container_name: decoration-redis-prod
    restart: unless-stopped
    command: redis-server --requirepass $$REDIS_PASSWORD
    environment:
      REDIS_PASSWORD_FILE: /run/secrets/redis_password
    # ports:
    #   - "6379:6379"  # 生产建议注释掉
    volumes:
      - redis_data:/data
    secrets:
      - redis_password
    networks:
      - decoration-network
    # 移除 healthcheck，因为可能导致启动失败

  # 后端API服务
  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    container_name: decoration-backend-prod
    restart: unless-stopped
    ports:
      - "8000:8000"
    env_file:
      - .env
    secrets:
      - postgres_password
      - redis_password
    volumes:
      - ./backend:/app
      - ./logs:/app/logs  # 日志持久化
    depends_on:
      postgres:
        condition: service_healthy
      redis: # 改为简单依赖，不等待健康检查
        condition: service_started
    networks:
      - decoration-network

  # Nginx反向代理
  nginx:
    image: nginx:alpine
    container_name: decoration-nginx-prod
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf
      - ./nginx/ssl:/etc/nginx/ssl
    depends_on:
      - backend
    networks:
      - decoration-network

volumes:
  redis_data:

networks:
  decoration-network:
    driver: bridge

# ========== Secrets ==========
secrets:
  postgres_password:
    file: ./secrets/prod_db_password.txt
  redis_password:
    file: ./secrets/prod_redis_password.txt
