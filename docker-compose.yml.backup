services:
  # PostgreSQLæ•°æ®åº“ï¼ˆç”Ÿäº§ç¯å¢ƒï¼‰
  postgres:
    image: postgres:latest
    container_name: decoration-postgres-prod
    restart: unless-stopped
    environment:
      POSTGRES_DB: decoration     #åŸä¸ºzhuangxiu_prod
      POSTGRES_USER: decoration
      POSTGRES_PASSWORD_FILE: /run/secrets/postgres_password
    volumes:
      - /data/postgres/prod:/var/lib/postgresql/data
      - ./database/init.sql:/docker-entrypoint-initdb.d/init.sql
    secrets:
      - postgres_password
    networks:
      - decoration-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U decoration"]
      interval: 10s
      timeout: 5s
      retries: 5

  # Redisç¼“å­˜ï¼ˆå¸¦å¯†ç ï¼‰â€” æ­£ç¡®ä» secret è¯»å–å¯†ç 
  redis:
    image: redis:latest
    container_name: decoration-redis-prod
    restart: unless-stopped
    entrypoint: |
      sh -c '
        REDIS_PASSWORD=$$(cat /run/secrets/redis_password)
        exec redis-server --requirepass "$$REDIS_PASSWORD"
      '
    secrets:
      - redis_password
    volumes:
      - redis_data:/data
    networks:
      - decoration-network

  # åç«¯APIæœåŠ¡ â€” ç”Ÿäº§æ¨¡å¼ï¼šä¸æŒ‚è½½æºç ï¼Œä»…æŒ‚è½½æ—¥å¿—
  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    container_name: decoration-backend-prod
    restart: unless-stopped
    ports:
      - "8000:8000"
    # ğŸ‘‡ ä» .env æ–‡ä»¶è‡ªåŠ¨åŠ è½½ï¼ˆDocker Compose å˜é‡æ›¿æ¢ï¼‰
    environment:
      - SECRET_KEY=${SECRET_KEY}
      - WECHAT_APP_ID=${WECHAT_APP_ID}
      - WECHAT_APP_SECRET=${WECHAT_APP_SECRET}
      - ALIYUN_ACCESS_KEY_ID=${ALIYUN_ACCESS_KEY_ID}      # æ–°å¢
      - ALIYUN_ACCESS_KEY_SECRET=${ALIYUN_ACCESS_KEY_SECRET}  # æ–°å¢
    volumes:
      - ./logs:/app/logs  # ä»…ä¿ç•™æ—¥å¿—æŒä¹…åŒ–
    secrets:
      - postgres_password
      - redis_password
    depends_on:
      postgres:
        condition: service_healthy
      redis:
        condition: service_started
    networks:
      - decoration-network
    entrypoint: |
      sh -c '
        # ä» Docker secrets è¯»å–æ•æ„Ÿä¿¡æ¯
        POSTGRES_PASSWORD=$$(cat /run/secrets/postgres_password)
        REDIS_PASSWORD=$$(cat /run/secrets/redis_password)

        # æ„å»ºè¿æ¥å­—ç¬¦ä¸²ï¼ˆä¸ Settings ç±»å…¼å®¹ï¼‰
        export DATABASE_URL="postgresql://decoration:$${POSTGRES_PASSWORD}@postgres:5432/zhuangxiu_prod"
        export REDIS_URL="redis://:$${REDIS_PASSWORD}@redis:6379/0"

        # å¯åŠ¨ FastAPI åº”ç”¨ï¼ˆç”Ÿäº§æ¨¡å¼ï¼šworkers=4, æ—  reloadï¼‰
        exec uvicorn main:app --host 0.0.0.0 --port 8000 --workers 4
      '

  # Nginxåå‘ä»£ç†
  nginx:
    image: nginx:alpine
    container_name: decoration-nginx-prod
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf
      - ./nginx/ssl:/etc/nginx/ssl
    depends_on:
      - backend
    networks:
      - decoration-network

# å£°æ˜å·
volumes:
  redis_data:

# å£°æ˜ç½‘ç»œ
networks:
  decoration-network:
    driver: bridge

# ========== Secrets ==========
secrets:
  postgres_password:
    file: ./secrets/prod_db_password.txt
  redis_password:
    file: ./secrets/prod_redis_password.txt
