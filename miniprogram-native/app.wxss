/**
 * 装修决策Agent - 全局样式
 * 色值/字体/按钮/卡片/动效，深色模式适配
 * 基准尺寸 375×667，rpx 弹性单位
 */

page {
  --primary: #007AFF;
  --primary-light: #4096FF;
  --success: #00CC66;
  --warning: #FF9900;
  --danger: #FF3333;
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-tertiary: #999999;
  --border-light: #EEEEEE;
  --bg-page: #F8F8F8;
  --bg-card: #FFFFFF;
  --red-dot: #FF3333;
  font-size: 28rpx;
  color: var(--text-primary);
  background-color: var(--bg-page);
  box-sizing: border-box;
}

/* 深色模式 */
@media (prefers-color-scheme: dark) {
  page {
    --text-primary: #FFFFFF;
    --text-secondary: #CCCCCC;
    --text-tertiary: #999999;
    --border-light: #444444;
    --bg-page: #1C1C1E;
    --bg-card: #2C2C2E;
  }
}

/* 字体规范 */
.text-title { font-size: 36rpx; font-weight: bold; color: var(--text-primary); }
.text-body { font-size: 28rpx; color: var(--text-primary); }
.text-aux { font-size: 24rpx; color: var(--text-tertiary); }
.text-mini { font-size: 20rpx; color: var(--text-tertiary); }
.text-primary { color: var(--primary); }
.text-success { color: var(--success); }
.text-warning { color: var(--warning); }
.text-danger { color: var(--danger); }

/* 主按钮 88rpx 高、圆角16rpx */
.btn-primary {
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #007AFF 0%, #4096FF 100%);
  color: #FFFFFF;
  font-size: 28rpx;
  text-align: center;
  border: none;
}
.btn-primary:active { transform: scale(0.95); transition: transform 0.1s; }

/* 次要按钮 60rpx 高 */
.btn-secondary {
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 16rpx;
  background: transparent;
  color: var(--primary);
  font-size: 24rpx;
  text-align: center;
  border: 1rpx solid var(--primary);
}
.btn-secondary:active { transform: scale(0.95); transition: transform 0.1s; }

/* 置灰按钮 */
.btn-disabled {
  background: #E5E5E5 !important;
  color: #999999 !important;
  border: none !important;
}

/* 卡片：圆角16rpx、阴影 */
.card {
  background: var(--bg-card);
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  padding: 20rpx;
}

/* 红点 8rpx 纯红圆形 */
.red-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: var(--red-dot);
  position: absolute;
  top: -4rpx;
  right: -4rpx;
}

/* 弹窗遮罩 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 999;
}
@media (prefers-color-scheme: dark) {
  .modal-mask { background: rgba(0, 0, 0, 0.9); }
}

/* 弹窗内容 */
.modal-content {
  width: 90%;
  max-height: 80vh;
  background: var(--bg-card);
  border-radius: 16rpx;
  position: fixed;
  left: 5%;
  top: 50%;
  transform: translateY(-50%);
  z-index: 1000;
  animation: modalFadeIn 0.2s ease;
}
@keyframes modalFadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* 页面通用布局 */
.page-container {
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 居中容器 */
.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 空视图 */
.empty-state {
  padding: 80rpx 40rpx;
  text-align: center;
}
.empty-state .empty-icon { font-size: 80rpx; color: var(--text-tertiary); margin-bottom: 20rpx; }
.empty-state .empty-text { font-size: 28rpx; color: var(--text-secondary); }

/* Toast 固定在胶囊下方（由 wx.showToast 处理，此处预留） */
/* 加载动画 60rpx×60rpx */
.loading-wrap { display: flex; flex-direction: column; align-items: center; padding: 40rpx; }
.loading-icon { width: 60rpx; height: 60rpx; }
.progress-bar {
  width: 70%;
  height: 6rpx;
  background: var(--border-light);
  border-radius: 3rpx;
  overflow: hidden;
  margin-top: 20rpx;
}
.progress-fill {
  height: 100%;
  background: var(--primary);
  border-radius: 3rpx;
  transition: width 0.2s;
}

/* 安全区域 */
.safe-area-bottom { padding-bottom: constant(safe-area-inset-bottom); padding-bottom: env(safe-area-inset-bottom); }
