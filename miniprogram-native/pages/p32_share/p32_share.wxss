.p32-page {
  min-height: 100vh;
  background: #F8F8F8;
  padding: 40rpx 20rpx 160rpx;
}

.share-card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  padding: 40rpx;
  text-align: center;
}

.share-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.share-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.share-desc {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 32rpx;
}

.qrcode-wrap {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  background: #F5F5F5;
  border: 1rpx solid #EEE;
  display: flex;
  align-items: center;
  justify-content: center;
}

.qrcode-placeholder {
  font-size: 24rpx;
  color: #999;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 160rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-shadow: 0 -2rpx 8rpx rgba(0,0,0,0.1);
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.action-item:active { transform: scale(0.95); }

.action-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 24rpx;
  color: #333;
}

.safe-area-bottom {
  height: constant(safe-area-inset-bottom);
  height: env(safe-area-inset-bottom);
}
