.p24-page {
  min-height: 100vh;
  background: #F8F8F8;
  padding: 20rpx;
  padding-bottom: 60rpx;
}

.tabs {
  white-space: nowrap;
  margin-bottom: 20rpx;
}
.tab-list {
  display: inline-flex;
  padding: 0 8rpx;
  gap: 24rpx;
}
.tab-item {
  font-size: 28rpx;
  color: #666;
  padding: 16rpx 24rpx;
  flex-shrink: 0;
}
.tab-item.active {
  font-weight: bold;
  color: #007AFF;
  border-bottom: 4rpx solid #007AFF;
}

.order-list { padding-bottom: 20rpx; }

.order-card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  padding: 24rpx;
  margin-bottom: 20rpx;
}
.order-card:active { opacity: 0.95; }

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}
.order-type { font-size: 28rpx; color: #333; font-weight: bold; }
.order-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}
.order-status.pending { background: #FFF7E5; color: #FF9900; }
.order-status.paid { background: #E6FFED; color: #00CC66; }
.order-status.refund { background: #EEEEEE; color: #666; }

.order-body { margin-bottom: 16rpx; }
.order-name { font-size: 28rpx; color: #333; display: block; }
.order-no { font-size: 24rpx; color: #999; }

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #EEE;
}
.order-amount { font-size: 28rpx; color: #FF3333; font-weight: bold; }
.order-link { font-size: 24rpx; color: #007AFF; }

.empty-state {
  padding: 120rpx 40rpx;
  text-align: center;
}
.empty-icon { font-size: 80rpx; display: block; margin-bottom: 24rpx; }
.empty-text { font-size: 28rpx; color: #666; display: block; margin-bottom: 40rpx; }
.empty-btn { font-size: 28rpx; color: #007AFF; }

.safe-area-bottom {
  height: constant(safe-area-inset-bottom);
  height: env(safe-area-inset-bottom);
}
