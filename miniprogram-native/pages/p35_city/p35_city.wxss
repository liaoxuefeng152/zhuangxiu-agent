.p35-page { padding: 20rpx; }
.search-wrap { margin-bottom: 24rpx; }
.search {
  width: 100%;
  height: 88rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
}
.hot-cities { margin-bottom: 40rpx; }
.label { font-size: 28rpx; font-weight: bold; display: block; margin-bottom: 16rpx; }
.city-tags { display: flex; flex-wrap: wrap; gap: 16rpx; }
.tag {
  padding: 16rpx 24rpx;
  background: #EEE;
  border-radius: 8rpx;
  font-size: 28rpx;
}
