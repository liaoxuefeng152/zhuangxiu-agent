.p30-page {
  min-height: 100vh;
  background: #F8F8F8;
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.content { padding-bottom: 40rpx; }

.overview-card {
  margin-bottom: 24rpx;
}
.status-badge {
  display: inline-block;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
}
.status-badge.pass { background: #E6FFED; color: #00CC66; }
.status-badge.fail { background: #FFE6E6; color: #FF3333; }
.status-badge.pending { background: #FFF7E5; color: #FF9900; }
.overview-time { font-size: 24rpx; color: #999; display: block; margin-bottom: 12rpx; }
.overview-stats {
  font-size: 28rpx;
  color: #333;
  display: flex;
  gap: 24rpx;
}
.text-danger { color: #FF3333; }

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 24rpx 0 16rpx;
}

.detail-list { margin-bottom: 24rpx; }

.detail-item {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  padding: 20rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 12rpx;
}
.detail-item:active { transform: scale(0.99); }
.item-main { flex: 1; min-width: 0; }
.item-name { font-size: 28rpx; color: #333; display: block; }
.item-standard { font-size: 24rpx; color: #999; display: block; margin-top: 4rpx; }
.item-result { font-size: 24rpx; }
.item-result.pass { color: #00CC66; }
.item-result.fail { color: #FF3333; }
.item-link { font-size: 24rpx; color: #007AFF; }

.fix-section { margin-bottom: 24rpx; }
.fix-card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  padding: 20rpx;
}
.fix-suggestion { font-size: 28rpx; color: #666; display: block; margin-bottom: 20rpx; }
.fix-actions { display: flex; gap: 20rpx; }
.fix-btn { flex: 1; }

.photo-section { margin-bottom: 24rpx; }
.photo-scroll { white-space: nowrap; }
.photo-list {
  display: inline-flex;
  gap: 16rpx;
  padding: 8rpx 0;
}
.photo-item {
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
  border-radius: 12rpx;
  overflow: hidden;
}
.photo-thumb {
  width: 100%;
  height: 100%;
}
.photo-add {
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
  border: 2rpx dashed #007AFF;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #007AFF;
}
.photo-add-icon { font-size: 48rpx; }
.photo-add-text { font-size: 24rpx; margin-top: 4rpx; }

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: #F8F8F8;
}
.bottom-bar .btn-full { width: 100%; }

.loading-wrap {
  min-height: 60vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}
.loading-inner {
  text-align: center;
  width: 100%;
}
.loading-icon {
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto 20rpx;
  border: 4rpx solid #EEEEEE;
  border-top-color: #007AFF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}
@keyframes spin {
  to { transform: rotate(360deg); }
}
.loading-text { font-size: 28rpx; color: #333; display: block; margin-bottom: 16rpx; }
.loading-inner .progress-bar {
  width: 70%;
  height: 6rpx;
  background: #EEEEEE;
  border-radius: 3rpx;
  margin: 0 auto;
  overflow: hidden;
}
.loading-inner .progress-fill {
  height: 100%;
  background: #007AFF;
  border-radius: 3rpx;
  transition: width 0.2s;
}

.safe-area-bottom {
  height: constant(safe-area-inset-bottom);
  height: env(safe-area-inset-bottom);
}
