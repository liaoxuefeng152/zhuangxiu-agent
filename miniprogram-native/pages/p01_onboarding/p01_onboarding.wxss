.p01-page {
  min-height: 100vh;
  background: #fff;
  position: relative;
}

.skip-btn {
  position: absolute;
  top: 60rpx;
  right: 30rpx;
  font-size: 24rpx;
  color: #666;
  z-index: 10;
}

.swiper {
  height: 100vh;
}

.slide {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  box-sizing: border-box;
}

.slide-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.slide-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 24rpx;
}

.slide-desc {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
}

.slide-features {
  display: flex;
  gap: 40rpx;
}

.feature {
  font-size: 28rpx;
  color: #666;
}

.start-btn {
  width: 80%;
  margin-top: 60rpx;
}
