<view class="p22-page">
  <view class="form">
    <picker mode="selector" range="{{types}}" range-key="label" value="{{typeIndex}}" bindchange="onTypeChange">
      <view class="input-row">{{types[typeIndex].label}}</view>
    </picker>
    <textarea class="textarea" placeholder="请详细描述您的问题（不少于10字）" value="{{content}}" bindinput="onContentInput" maxlength="500"/>
    <button class="btn-primary {{canSubmit ? '' : 'btn-disabled'}}" bindtap="onSubmit" disabled="{{!canSubmit}}">提交</button>
  </view>
</view>
