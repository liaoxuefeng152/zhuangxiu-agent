.p14-page {
  min-height: 100vh;
  background: #F8F8F8;
  padding: 20rpx;
  padding-bottom: 60rpx;
}

.tabs { white-space: nowrap; margin-bottom: 20rpx; }
.tab-list { display: inline-flex; gap: 24rpx; padding: 0 8rpx; }
.tab-item {
  font-size: 28rpx;
  color: #666;
  padding: 16rpx 24rpx;
  flex-shrink: 0;
}
.tab-item.active {
  font-weight: bold;
  color: #007AFF;
  border-bottom: 4rpx solid #007AFF;
}

.msg-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: flex-start;
}
.msg-card:active { background: #F5F5F5; }

.msg-icon { font-size: 40rpx; margin-right: 20rpx; }
.msg-content { flex: 1; min-width: 0; }
.msg-title { font-size: 28rpx; color: #333; display: block; }
.msg-desc { font-size: 24rpx; color: #999; display: block; margin-top: 8rpx; }
.msg-right { position: relative; }
.msg-time { font-size: 20rpx; color: #999; }
.msg-dot {
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #FF3333;
}

.empty-state {
  padding: 120rpx 40rpx;
  text-align: center;
}
.empty-icon { font-size: 80rpx; display: block; margin-bottom: 24rpx; }
.empty-text { font-size: 28rpx; color: #666; }

.safe-area-bottom {
  height: constant(safe-area-inset-bottom);
  height: env(safe-area-inset-bottom);
}
