<view class="p25-page" wx:if="{{order}}">
  <view class="card info-card">
    <text class="info-type">{{order.typeName}}</text>
    <text class="info-no">订单号：{{order.no}}</text>
    <text class="info-time">下单时间：{{order.timeText}}</text>
    <view class="info-amount-wrap">
      <text class="info-amount">¥{{order.amount}}</text>
      <text class="info-status {{order.statusClass}}">{{order.statusText}}</text>
    </view>
  </view>

  <view class="card content-card">
    <text class="content-title">订单内容</text>
    <text class="content-desc">{{order.name}}</text>
  </view>

  <view class="action-wrap">
    <button wx:if="{{order.status === 'pending'}}" class="btn-primary" bindtap="onPay">去支付</button>
    <button wx:if="{{order.status === 'paid'}}" class="btn-secondary" bindtap="onViewBenefit">查看权益</button>
  </view>

  <view class="safe-area-bottom"></view>
</view>

<view class="p25-page empty" wx:else>
  <text class="empty-text">订单不存在</text>
  <button class="btn-primary" bindtap="onBack">返回</button>
</view>
