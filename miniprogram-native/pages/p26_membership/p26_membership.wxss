.p26-page {
  min-height: 100vh;
  background: #F8F8F8;
  padding: 20rpx;
  padding-bottom: 180rpx;
}

.status-card {
  text-align: center;
  padding: 40rpx;
  margin-bottom: 20rpx;
}
.status-card.member {
  background: linear-gradient(135deg, #FFE066 0%, #FFCC00 100%);
}
.status-icon { font-size: 64rpx; display: block; margin-bottom: 16rpx; }
.status-text { font-size: 28rpx; color: #333; display: block; }
.status-desc { font-size: 24rpx; color: #666; display: block; margin-top: 8rpx; }
.status-remain { font-size: 24rpx; color: #FF3333; display: block; margin-top: 8rpx; }

.benefits-card { margin-bottom: 20rpx; }

.benefit-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #EEE;
}
.benefit-item:last-child { border-bottom: none; }
.benefit-icon { font-size: 40rpx; margin-right: 20rpx; }
.benefit-name { font-size: 28rpx; color: #333; display: block; }
.benefit-desc { font-size: 24rpx; color: #999; }

.packages {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.package-card {
  flex: 1;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  padding: 24rpx;
  text-align: center;
  position: relative;
}
.package-card.selected {
  border: 4rpx solid #FFCC00;
  box-sizing: border-box;
}
.package-card:active { opacity: 0.95; }

.pkg-badge {
  position: absolute;
  top: -8rpx;
  right: 8rpx;
  font-size: 20rpx;
  color: #FF9900;
  background: #FFF7E5;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.pkg-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
}
.pkg-desc { font-size: 24rpx; color: #999; display: block; margin: 12rpx 0; }
.pkg-btn { font-size: 24rpx; color: #007AFF; }

.bottom-tip {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-bottom: 24rpx;
}

.action-wrap {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: #F8F8F8;
}
.btn-full { width: 100%; }

.safe-area-bottom {
  height: constant(safe-area-inset-bottom);
  height: env(safe-area-inset-bottom);
}
