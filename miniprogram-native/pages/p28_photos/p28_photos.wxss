.p28-page {
  min-height: 100vh;
  background: #F8F8F8;
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.tabs {
  white-space: nowrap;
  margin-bottom: 20rpx;
}
.tab-list {
  display: inline-flex;
  padding: 0 8rpx;
  gap: 24rpx;
}
.tab-item {
  font-size: 28rpx;
  color: #666;
  padding: 16rpx 24rpx;
  flex-shrink: 0;
}
.tab-item.active {
  font-weight: bold;
  color: #007AFF;
  border-bottom: 4rpx solid #007AFF;
}

.top-actions {
  position: fixed;
  top: 0;
  right: 20rpx;
  z-index: 10;
  padding-top: 88rpx;
}
.batch-btn {
  font-size: 24rpx;
  color: #007AFF;
}

.photo-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.photo-cell {
  width: calc((100% - 32rpx) / 3);
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}
.photo-cell:active { transform: scale(0.98); }
.photo-cell.selected { border: 4rpx solid #007AFF; box-sizing: border-box; }
.photo-check {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,122,255,0.8);
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 50%;
}
.photo-img {
  width: 100%;
  height: 100%;
}
.photo-time {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  font-size: 20rpx;
  color: #fff;
  background: rgba(0,0,0,0.5);
  padding: 4rpx 8rpx;
}

.empty-state {
  padding: 120rpx 40rpx;
  text-align: center;
}
.empty-icon { font-size: 80rpx; display: block; margin-bottom: 24rpx; }
.empty-text { font-size: 28rpx; color: #666; display: block; margin-bottom: 40rpx; }
.empty-btn { width: 60%; margin: 0 auto; }

.batch-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-shadow: 0 -2rpx 8rpx rgba(0,0,0,0.1);
}
.batch-bar text {
  font-size: 28rpx;
  color: #007AFF;
}

.safe-area-bottom {
  height: constant(safe-area-inset-bottom);
  height: env(safe-area-inset-bottom);
}
