.p15-page {
  min-height: 100vh;
  background: #000;
  padding-bottom: 200rpx;
}

.scene-tip {
  padding: 20rpx 24rpx;
  font-size: 24rpx;
  color: rgba(255,255,255,0.9);
  background: rgba(0,0,0,0.5);
}

.guide-layer {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255,255,255,0.9);
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}
.guide-content {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  width: 100%;
}
.guide-title { font-size: 32rpx; font-weight: bold; color: #333; display: block; margin-bottom: 20rpx; }
.guide-item { font-size: 28rpx; color: #666; display: block; margin-bottom: 12rpx; }
.guide-close { font-size: 28rpx; color: #007AFF; display: block; margin-top: 24rpx; text-align: center; }

.preview-area {
  padding: 20rpx;
}
.preview-scroll {
  white-space: nowrap;
}
.preview-list {
  display: inline-flex;
  gap: 16rpx;
}
.preview-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
  border-radius: 12rpx;
  overflow: hidden;
}
.preview-img {
  width: 100%;
  height: 100%;
}
.preview-del {
  position: absolute;
  top: 0;
  right: 0;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0,0,0,0.6);
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  line-height: 48rpx;
}

.upload-placeholder {
  flex: 1;
  min-height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed rgba(255,255,255,0.3);
  border-radius: 16rpx;
  margin: 20rpx;
}
.upload-icon { font-size: 80rpx; margin-bottom: 20rpx; }
.upload-text { font-size: 28rpx; color: rgba(255,255,255,0.7); }

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 180rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  box-sizing: border-box;
}
.bar-left, .bar-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}
.bar-left:active, .bar-center:active { transform: scale(0.95); }
.bar-icon { font-size: 40rpx; }
.bar-text { font-size: 24rpx; color: #333; }
.bar-center {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.capture-btn {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: #007AFF;
  border: 6rpx solid rgba(255,255,255,0.8);
}
.bar-count { font-size: 24rpx; color: #666; }
.btn-confirm {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 32rpx;
  font-size: 24rpx;
  background: #007AFF;
  color: #fff;
  border-radius: 16rpx;
  border: none;
}
.btn-confirm:active { opacity: 0.9; }

.safe-area-bottom {
  height: constant(safe-area-inset-bottom);
  height: env(safe-area-inset-bottom);
}
