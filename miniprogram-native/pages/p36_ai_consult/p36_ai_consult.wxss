.p36-page {
  min-height: 100vh;
  background: #F5F5F5;
  padding: 20rpx;
  padding-bottom: 120rpx;
}
.context-card {
  background: #EEE;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.context-title { font-size: 24rpx; color: #666; }
.chat-area { margin-bottom: 20rpx; }
.msg.bot {
  background: #fff;
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
}
.input-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: #fff;
  display: flex;
  gap: 16rpx;
}
.input { flex: 1; background: #F5F5F5; padding: 20rpx; border-radius: 16rpx; }
.send-btn { padding: 0 32rpx; background: #007AFF; color: #fff; border-radius: 16rpx; }
