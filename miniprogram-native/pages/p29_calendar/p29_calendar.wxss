.p29-page { padding: 20rpx; }
.month-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  font-size: 32rpx;
}
.month-text { font-weight: bold; }
.weekdays {
  display: flex;
  padding: 16rpx 0;
}
.weekdays text { flex: 1; text-align: center; font-size: 24rpx; color: #999; }
.days-grid {
  display: flex;
  flex-wrap: wrap;
}
.day-cell {
  width: 14.28%;
  aspect-ratio: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}
.day-cell.today { color: #007AFF; font-weight: bold; }
.day-cell.has-node { background: #E8F4FF; }
.empty-hint { text-align: center; padding: 60rpx; color: #999; }
