<view class="p29-page">
  <view class="month-bar">
    <text bindtap="onPrevMonth">‹</text>
    <text class="month-text">{{year}}年{{month}}月</text>
    <text bindtap="onNextMonth">›</text>
  </view>
  <view class="weekdays">
    <text wx:for="{{weekdays}}" wx:key="*this">{{item}}</text>
  </view>
  <view class="days-grid">
    <view class="day-cell {{item.isToday ? 'today' : ''}} {{item.hasNode ? 'has-node' : ''}}" wx:for="{{days}}" wx:key="date">
      {{item.date}}
    </view>
  </view>
  <view class="empty-hint" wx:if="{{!startDate}}">请先在施工陪伴页设置开工日期</view>
</view>
