.p34-page {
  min-height: 100vh;
  background: #F8F8F8;
  padding: 20rpx;
  padding-bottom: 160rpx;
}

.overview-card {
  margin-bottom: 24rpx;
}

.overview-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 24rpx;
}

.stage-bars {
  margin-bottom: 24rpx;
}

.bar-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.bar-label {
  width: 140rpx;
  font-size: 24rpx;
  color: #333;
  flex-shrink: 0;
}

.bar-wrap {
  flex: 1;
  height: 12rpx;
  background: #EEEEEE;
  border-radius: 6rpx;
  overflow: hidden;
}

.bar-fill {
  height: 100%;
  background: #007AFF;
  border-radius: 6rpx;
  transition: width 0.2s;
}

.bar-value {
  width: 60rpx;
  font-size: 24rpx;
  color: #666;
  text-align: right;
}

.overview-summary {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: block;
  padding-top: 16rpx;
  border-top: 1rpx solid #EEEEEE;
}

.data-cards {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.data-card {
  flex: 1;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  padding: 24rpx;
  text-align: center;
}

.data-num {
  font-size: 40rpx;
  font-weight: bold;
  color: #007AFF;
  display: block;
  margin-bottom: 8rpx;
}

.data-label {
  font-size: 24rpx;
  color: #999;
}

.action-wrap {
  width: 100%;
}

.btn-full {
  width: 100%;
}

.safe-area-bottom {
  height: constant(safe-area-inset-bottom);
  height: env(safe-area-inset-bottom);
}
