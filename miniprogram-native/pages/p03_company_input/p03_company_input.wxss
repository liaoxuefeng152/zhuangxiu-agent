.p03-page {
  min-height: 100vh;
  background: #F8F8F8;
  padding: 40rpx;
}

.input-wrap {
  background: #fff;
  border-radius: 16rpx;
  border: 1rpx solid #EEE;
  padding: 24rpx;
  margin-bottom: 24rpx;
  position: relative;
}
.input { font-size: 28rpx; }
.input-count {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 20rpx;
  color: #999;
}

.match-list {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
}
.match-item {
  padding: 24rpx;
  border-bottom: 1rpx solid #EEE;
}
.match-item:last-child { border-bottom: none; }
.match-name { font-size: 28rpx; color: #333; display: block; }
.match-region { font-size: 24rpx; color: #999; }

.empty-wrap {
  padding: 60rpx;
  text-align: center;
}
.empty-hint { font-size: 28rpx; color: #999; }

.btn-wrap { margin-top: 60rpx; }
.btn-wrap .btn-primary { width: 100%; }
