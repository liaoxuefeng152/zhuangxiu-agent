# 装修决策Agent - 环境变量配置示例
# 复制此文件为 .env 并填入实际配置

# 应用配置
APP_NAME=装修决策Agent
DEBUG=False
VERSION=2.1.0

# 数据库配置
DATABASE_URL=postgresql+asyncpg://decoration:your_strong_password_here@localhost:5432/zhuangxiu_prod

# Redis配置
REDIS_URL=redis://localhost:6379/0

# 微信小程序配置（必填）
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret

# 微信支付配置
WECHAT_MCH_ID=your_merchant_id
WECHAT_API_KEY=your_wechat_api_key
WECHAT_NOTIFY_URL=https://your-domain.com/api/v1/payments/notify

# 阿里云配置（必填）
ALIYUN_ACCESS_KEY_ID=your_access_key_id
ALIYUN_ACCESS_KEY_SECRET=your_access_key_secret
ALIYUN_OSS_BUCKET=decoration-agent
ALIYUN_OCR_ENDPOINT=ocr-api.cn-hangzhou.aliyuncs.com

# 天眼查API配置（必填）
TIANYANCHA_TOKEN=your_tianyancha_token

# DeepSeek API配置（必填）
DEEPSEEK_API_KEY=your_deepseek_api_key

# JWT密钥（必填，使用 openssl rand -hex 32 生成）
SECRET_KEY=your_random_secret_key_here

# ==================== 文件上传配置 ====================
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=["jpg","jpeg","png","gif","pdf"]

# ==================== 报告定价配置 ====================
REPORT_SINGLE_PRICE=9.9
REPORT_THREE_PRICE=25.0
SUPERVISION_SINGLE_PRICE=99.0
SUPERVISION_PACKAGE_PRICE=268.0

# CORS配置（生产环境必须指定具体域名）
ALLOWED_ORIGINS=http://localhost:10086,https://decoration-agent.com
